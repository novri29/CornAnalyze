<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leaf.BlightLeaf"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/tv_blight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blight_leaf"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_logo"
            android:background="@drawable/rounded_corner"
            app:layout_constraintStart_toStartOf="@+id/tv_blight"
            app:layout_constraintTop_toBottomOf="@+id/tv_blight" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_blight2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <!-- Judul -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Keterangan Daun Blight (Hawar)"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/long_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word"
                android:text="Penyakit hawar (blight) jagung merupakan penyakit yang banyak menyebar di Amerika, Asia, Afrika, dan juga Eropa, kerugian apabila tanaman jagung terkena penyakit hawar dapat mencapai 50%. Penyakit hawar jagung terindikasi berbentuk bercak kecil yang berbentuk oval, yang kemudian bercak tersebut menjadi memanjang seperti ellips serta tumbuh menjadi nekrotik."
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

            <!-- Faktor -->
            <TextView
                android:id="@+id/tv_faktor_blight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Faktor Penyebab Hawar Pada Jagung :"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_faktor_blight_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="12dp"
                android:justificationMode="inter_word"
                android:text="@string/faktor_blight"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />

            <!-- Gejala -->
            <TextView
                android:id="@+id/tv_gejala_blight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Gejala Penyakit Hawar Daun Jagung :"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_blight_blight_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="12dp"
                android:justificationMode="inter_word"
                android:text="@string/gejala_blight"
                android:textSize="14sp" />

            <!-- Cara Mengatasi -->
            <TextView
                android:id="@+id/tv_mengatasi_blight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Cara mengendalikan penyakit karat daun :"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mengatasi_blight_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="12dp"
                android:justificationMode="inter_word"
                android:text="@string/mengatasi_blight"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"/>

            <!-- Sumber -->
            <TextView
                android:id="@+id/tv_sumber_blight_isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="12dp"
                android:textColor="#757575"
                android:justificationMode="inter_word"
                android:text="@string/sumber_blight"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
